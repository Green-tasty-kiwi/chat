<div class="categories">
    <p>Categories</p>
</div>
<div id="themes">
    {{#each subjects}}
    <a class="container" href="/themes/{{_id}}">
        <div class='name'>
            <p>{{name}}</p>
        </div>
    </a>
    {{/each}}
</div>

<style>
    /* Chat containers */
    body {
        background-color: rgb(233, 233, 233);
        margin: 0;
    }

    .categories {
        font-size: 25px;
        text-align: center;
        font-style: italic;
        font-weight: bold;
        padding: 10px;
        margin: 0;
    }

    .categories p {
        margin: 0;
    }

    #themes {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
        width: 100%;
        margin: 0;
    }

    .container {
        text-decoration: none;
        width: 400px;
        border: 2px solid #9e9e9e;
        background-color: #d6d6d6;
        border-radius: 5px;
        padding: 10px;
        margin: 10px 0;
        color: rgb(0, 0, 0)
    }

    .container:nth-child(3n+1) {
        order: 1;
    }

    .container:nth-child(3n+2) {
        order: 2;
    }

    .container:nth-child(3n) {
        order: 3;
    }



    .container:hover {
        text-decoration: none;
        color: rgb(99, 90, 90)
    }

    .name {
        font-size: 18px;
        font-weight: bold;
        border-bottom: 1px dashed rgb(153, 152, 152);
    }

    .description {
        margin-top: 10px;
        font-style: oblique;
        color: rgb(124, 124, 124);
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        /* number of lines to show */
        -webkit-box-orient: vertical;
    }

    p {
        text-align: center;
    }

    /* Darker chat container */
    .darker {
        border-color: #ccc;
        background-color: #ddd;
    }

    /* Clear floats */
    .container::after {
        content: "";
        clear: both;
        display: table;
    }

    /* Style images */
    .container img {
        float: left;
        max-width: 60px;
        width: 100%;
        margin-right: 20px;
        border-radius: 50%;
    }

    /* Style the right image */
    .container img.right {
        float: right;
        margin-left: 20px;
        margin-right: 0;
    }

    /* Style time text */
    .time-right {
        float: right;
        color: #aaa;
    }

    /* Style time text */
    .time-left {
        float: left;
        color: #999;
    }
</style>